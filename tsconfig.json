{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom", "es2017"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-native",
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["android", "ios", "node_nodules"]
}